
<table class="translations" data-content="translations">
  <thead class="translations-headers">
    <tr>
      <th class="translation-col translations-header">{{=it.metas.l10n_keys}}</th>
      <th class="translation-col translations-header">{{=it.metas.l10n_values}}</th>
    </tr>
  </thead>
  <tbody>
    {{~it :translation:index}}
      <tr class="translation" data-id="{{=translation.id}}" data-key="{{=translation.key}}">
        <td class="translation-col translation-key">{{=translation.key}}</td>
        <td class="translation-col translation-value">{{=translation.text.replace('\n', '<br>')}}</td>
      </tr>
    {{~}}
    {{?it.length === cf.TRANSLATION_ITEMS_PER_PAGE}}
      <tr class="translations-load">
        <td class="translation-load-cell">
          <a class="translation-load-anchor">{{=it.metas.l10n_loadMore}}</a>
        </td>
      </tr>
    {{?}}
  </tbody>
</table>
