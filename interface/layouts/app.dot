
<div class="app" data-layout="app">
  <header class="app-header">
    <div class="app-home" data-region="home">{{=it.home}}</div>
    <div class="app-search" data-region="search">{{=it.search}}</div>
    <div class="app-locales" data-region="locales">{{=it.locales}}</div>
  </header>
  <div class="app-localizations {{?it.localization}}hidden{{?}}" data-region="body">{{=it.body}}</div>
  <div class="app-localization {{?!it.localization}}hidden{{?}}" data-region="localization">{{?it.localization}}{{=it.localization}}{{?}}</div>
</div>
