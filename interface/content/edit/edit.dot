
<div class="edit" data-content="edit">
  <h1 class="edit-title">{{=it.key}}</h1>
  <form class="edit-form">
    <div class="edit-variables">
      <h2 class="edit-sub-title">{{=it.i18n_variables}}</h2>
      <ul class="edit-variables-list">
      {{?it.variables}}
        {{~it.variables :variable:index}}
          <li class="edit-variable">{{=variable}}</li>
        {{~}}
      {{??}}
        <li class="edit-variable">{{=it.i18n_none}}</li>
      {{?}}
      </ul>
    </div>
    <div class="edit-inputs clearfix">
      <h2 class="edit-sub-title">{{=it.i18n_translation}}</h2>
      <input type="text" class="edit-input" value="{{=it.value}}"></input>
      <div class="edit-actions">
        <button class="edit-actions-save button js-edit-actions-save" type="submit" disabled>{{=it.i18n_save}}</button>
        <button class="edit-actions-else button js-edit-actions-else" type="button" disabled>{{=it.i18n_else}}</button>
      </div>
    </div>
  </form>
</div>
